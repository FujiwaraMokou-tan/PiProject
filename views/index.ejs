    -------------------------------------------------------------------------------------------------------------------------------------------------------------
-->
            <div id="Economic">
                <%- include('./StaticStuff/economic.ejs') %>
            </div>
            <!--
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
-->
            <div id="Social">
                <%- include('./StaticStuff/social.ejs') %>
            </div>
            <!--
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
-->
            <div id="IPS">
                <%- include('./StaticStuff/ips.ejs') %>
            </div>
            <!--
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
-->
            <div id="Technology">
                <%- include('./StaticStuff/technology.ejs') %>
            </div>
            <!--
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
-->
            <div id="AboutMe">
                <%- include('./StaticStuff/aboutMe.ejs') %>
            </div>
            <!--
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
    -------------------------------------------------------------------------------------------------------------------------------------------------------------
-->
            <div id="Articles">
                <%- include('./Articles/articleForm.ejs') %>
            </div>
        </div>
    </div>
